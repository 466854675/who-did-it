<idea-plugin>
    <id>cn.joylau.code.who-did-it</id>
    <name>who did it</name>
    <vendor email="2587038142@qq.com" url="https://github.com/JoyLau/who-did-it">To contact me</vendor>
    <version>2018.2.20181021</version>
    <releaseDate>20181021</releaseDate>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <projectViewNodeDecorator implementation="cn.joylau.code.view.VCSDecoratorNode"/>

        <applicationService serviceImplementation="cn.joylau.code.settings.WhoDidSettings"/>

        <applicationConfigurable instance="cn.joylau.code.panel.SettingsPanel"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>cn.joylau.code.compont.VCSDecoratorProject</implementation-class>
        </component>
        <component>
            <implementation-class>cn.joylau.code.update.UpdateComponent</implementation-class>
        </component>
    </project-components>

    <actions>
        <group id="cn.joylau.code.action.group.settings" text="Who Did It" description="Who Did It Actions" popup="true">
            <action
                    id="cn.joylau.code.action.enable"
                    class="cn.joylau.code.action.EnableVCSInfoAction"
                    text="enabled VCS info"
                    description="enabled VCS info Action"
            />
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>

        <action id="cn.joylau.code.action.disable" class="cn.joylau.code.action.EnableVCSInfoAction">
            <add-to-group group-id="ProjectViewPopupMenu"/>
        </action>
    </actions>
</idea-plugin>